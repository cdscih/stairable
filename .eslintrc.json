{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2022": true
    },
    "extends": [
        "standard"
    ],
    "ignorePatterns": [
        "dist",
        "node_modules"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-useless-constructor": "off",
        "@typescript-eslint/no-useless-constructor": [
            "error"
        ],
        "no-console": 1
    }
}